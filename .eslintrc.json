{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier" // Adiciona integração com Prettier
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "commonjs"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier" // Adiciona integração com Prettier
  ],
  "rules": {
    "prettier/prettier": "error", // Garante que o código siga as regras do Prettier
    "@typescript-eslint/explicit-function-return-type": "off", // Desativa a exigência de tipos de retorno explícitos
    "@typescript-eslint/no-explicit-any": "warn", // Emite um aviso ao usar 'any'
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }], // Erro para variáveis não utilizadas, mas ignora argumentos que começam com '_'
    "no-console": "warn", // Emite um aviso ao usar 'console'
    "eqeqeq": ["error", "always"], // Exige o uso de '===' e '!=='
    "curly": "error", // Exige o uso de chaves em blocos
    "semi": ["error", "always"], // Exige ponto e vírgula no final das declarações
    "quotes": ["error", "single"], // Exige o uso de aspas simples
    "indent": ["error", 2], // Exige indentação de 2 espaços
    "linebreak-style": ["error", "unix"] // Exige o uso de quebras de linha estilo Unix
  }
}